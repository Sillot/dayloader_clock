<Window x:Class="DayloaderClock.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Paramètres — Dayloader Clock"
        Width="400" Height="360"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="#0D0D1A">

    <Window.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="Foreground" Value="#AABBCC"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Margin" Value="0,0,0,4"/>
        </Style>
        <Style TargetType="TextBox">
            <Setter Property="Background" Value="#1A1A30"/>
            <Setter Property="Foreground" Value="#CCDDEE"/>
            <Setter Property="BorderBrush" Value="#2D2D50"/>
            <Setter Property="Padding" Value="8,6"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="CaretBrush" Value="#4FACFE"/>
        </Style>
        <Style TargetType="CheckBox">
            <Setter Property="Foreground" Value="#AABBCC"/>
            <Setter Property="FontSize" Value="13"/>
        </Style>
    </Window.Resources>

    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Work day hours -->
        <StackPanel Grid.Row="0" Margin="0,0,0,14">
            <TextBlock Text="Durée journée de travail (heures)"/>
            <TextBox x:Name="txtWorkHours" Text="8"/>
        </StackPanel>

        <!-- Lunch start -->
        <StackPanel Grid.Row="1" Margin="0,0,0,14">
            <TextBlock Text="Début pause déjeuner (HH:mm)"/>
            <TextBox x:Name="txtLunchStart" Text="12:00"/>
        </StackPanel>

        <!-- Lunch duration -->
        <StackPanel Grid.Row="2" Margin="0,0,0,14">
            <TextBlock Text="Durée pause déjeuner (minutes)"/>
            <TextBox x:Name="txtLunchDuration" Text="60"/>
        </StackPanel>

        <!-- Auto-start -->
        <CheckBox Grid.Row="3" x:Name="chkAutoStart"
                  Content="  Démarrer automatiquement avec Windows"
                  Margin="0,4" IsChecked="True"/>

        <!-- Buttons -->
        <StackPanel Grid.Row="5" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Annuler" Padding="16,8" Margin="0,0,8,0"
                    Background="#1E1E3A" Foreground="#8899BB"
                    BorderBrush="#2D2D50" Click="Cancel_Click" Cursor="Hand"/>
            <Button Content="Enregistrer" Padding="16,8"
                    Background="#1A3A5A" Foreground="#4FACFE"
                    BorderBrush="#2D4D6D" FontWeight="SemiBold"
                    Click="Save_Click" Cursor="Hand"/>
        </StackPanel>
    </Grid>
</Window>
