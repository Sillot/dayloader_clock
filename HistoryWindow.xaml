<Window x:Class="DayloaderClock.HistoryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:res="clr-namespace:DayloaderClock.Resources"
        Title="{x:Static res:Strings.History_Title}"
        Width="520" Height="480"
        WindowStartupLocation="CenterOwner"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ResizeMode="CanResizeWithGrip"
        MinWidth="420" MinHeight="460"
        MaxWidth="800" MaxHeight="700">

    <Window.Resources>
        <Style x:Key="ChromeButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#8B7355"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Width" Value="28"/>
            <Setter Property="Height" Value="28"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#30000000"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="NavButton" TargetType="Button">
            <Setter Property="Background" Value="#3A2E1E"/>
            <Setter Property="Foreground" Value="#C9AA80"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontFamily" Value="Consolas"/>
            <Setter Property="Width" Value="32"/>
            <Setter Property="Height" Value="28"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#4A3D2A"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <!-- Outer frame -->
    <Border CornerRadius="14" Margin="6" Background="#2C2419">
        <Border.Effect>
            <DropShadowEffect Color="Black" BlurRadius="16" ShadowDepth="4" Opacity="0.55"/>
        </Border.Effect>

        <!-- Inner wood panel -->
        <Border CornerRadius="11" Margin="4"
                MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
            <Border.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                    <GradientStop Color="#D4B896" Offset="0.0"/>
                    <GradientStop Color="#C9AA80" Offset="0.3"/>
                    <GradientStop Color="#B8976A" Offset="0.7"/>
                    <GradientStop Color="#A8875A" Offset="1.0"/>
                </LinearGradientBrush>
            </Border.Background>

            <Grid Margin="20,10,20,14">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- ═══ TITLE BAR ═══ -->
                <Grid Grid.Row="0" Margin="0,0,0,8">
                    <TextBlock Text="{x:Static res:Strings.History_Header}"
                               FontSize="14" FontWeight="Bold"
                               Foreground="#4A3520" FontFamily="Consolas"
                               HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    <Button Content="&#x2715;" Style="{StaticResource ChromeButton}"
                            HorizontalAlignment="Right" Margin="0,-2,-6,0"
                            Click="Close_Click" Foreground="#7A5540"/>
                </Grid>

                <!-- ═══ MONTH NAVIGATION ═══ -->
                <Grid Grid.Row="1" Margin="0,0,0,10">
                    <Button Content="&#x25C0;" Style="{StaticResource NavButton}"
                            HorizontalAlignment="Left" Click="PrevMonth_Click"/>
                    <TextBlock x:Name="txtMonth"
                               Text="Février 2026"
                               FontSize="14" FontWeight="Bold"
                               Foreground="#4A3520" FontFamily="Consolas"
                               HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    <Button Content="&#x25B6;" Style="{StaticResource NavButton}"
                            HorizontalAlignment="Right" Click="NextMonth_Click"/>
                </Grid>

                <!-- ═══ CALENDAR HEADER (days of week) ═══ -->
                <UniformGrid Grid.Row="2" Columns="7" Margin="0,0,0,4">
                    <TextBlock Text="{x:Static res:Strings.Day_Mon}" HorizontalAlignment="Center" Foreground="#6B5035"
                               FontSize="10" FontWeight="Bold" FontFamily="Consolas"/>
                    <TextBlock Text="{x:Static res:Strings.Day_Tue}" HorizontalAlignment="Center" Foreground="#6B5035"
                               FontSize="10" FontWeight="Bold" FontFamily="Consolas"/>
                    <TextBlock Text="{x:Static res:Strings.Day_Wed}" HorizontalAlignment="Center" Foreground="#6B5035"
                               FontSize="10" FontWeight="Bold" FontFamily="Consolas"/>
                    <TextBlock Text="{x:Static res:Strings.Day_Thu}" HorizontalAlignment="Center" Foreground="#6B5035"
                               FontSize="10" FontWeight="Bold" FontFamily="Consolas"/>
                    <TextBlock Text="{x:Static res:Strings.Day_Fri}" HorizontalAlignment="Center" Foreground="#6B5035"
                               FontSize="10" FontWeight="Bold" FontFamily="Consolas"/>
                    <TextBlock Text="{x:Static res:Strings.Day_Sat}" HorizontalAlignment="Center" Foreground="#8B7355"
                               FontSize="10" FontWeight="Bold" FontFamily="Consolas"/>
                    <TextBlock Text="{x:Static res:Strings.Day_Sun}" HorizontalAlignment="Center" Foreground="#8B7355"
                               FontSize="10" FontWeight="Bold" FontFamily="Consolas"/>
                </UniformGrid>

                <!-- ═══ CALENDAR GRID ═══ -->
                <UniformGrid x:Name="calendarGrid" Grid.Row="3"
                             Columns="7" Rows="6"
                             MinWidth="336" MinHeight="288"/>

                <!-- ═══ SUMMARY ═══ -->
                <Border Grid.Row="4" Background="#3A2E1E" CornerRadius="8"
                        Padding="12,8" Margin="0,8,0,0">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel Grid.Column="0" HorizontalAlignment="Center">
                            <TextBlock Text="{x:Static res:Strings.History_Days}" HorizontalAlignment="Center"
                                       Foreground="#8B7355" FontSize="9" FontFamily="Consolas"/>
                            <TextBlock x:Name="txtDaysCount" Text="0"
                                       HorizontalAlignment="Center"
                                       Foreground="#E8D5B8" FontSize="18" FontWeight="Bold"
                                       FontFamily="Consolas"/>
                        </StackPanel>
                        <StackPanel Grid.Column="1" HorizontalAlignment="Center">
                            <TextBlock Text="{x:Static res:Strings.History_Total}" HorizontalAlignment="Center"
                                       Foreground="#8B7355" FontSize="9" FontFamily="Consolas"/>
                            <TextBlock x:Name="txtTotalHours" Text="0h"
                                       HorizontalAlignment="Center"
                                       Foreground="#E8D5B8" FontSize="18" FontWeight="Bold"
                                       FontFamily="Consolas"/>
                        </StackPanel>
                        <StackPanel Grid.Column="2" HorizontalAlignment="Center">
                            <TextBlock Text="{x:Static res:Strings.History_Average}" HorizontalAlignment="Center"
                                       Foreground="#8B7355" FontSize="9" FontFamily="Consolas"/>
                            <TextBlock x:Name="txtAvgHours" Text="0h"
                                       HorizontalAlignment="Center"
                                       Foreground="#E8D5B8" FontSize="18" FontWeight="Bold"
                                       FontFamily="Consolas"/>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- ═══ EXPORT BUTTONS ═══ -->
                <StackPanel Grid.Row="5" Orientation="Horizontal"
                            HorizontalAlignment="Center" Margin="0,8,0,0">
                    <Button Content="{x:Static res:Strings.History_ExportCsv}" Click="ExportCsv_Click"
                            Background="#3A2E1E" Foreground="#E8D5B8"
                            FontFamily="Consolas" FontSize="11"
                            BorderThickness="0" Padding="14,6" Margin="4,0"
                            Cursor="Hand">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}"
                                        CornerRadius="6" Padding="{TemplateBinding Padding}">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#4A3D2A"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                    <Button Content="{x:Static res:Strings.History_ExportXlsx}" Click="ExportXlsx_Click"
                            Background="#3A2E1E" Foreground="#E8D5B8"
                            FontFamily="Consolas" FontSize="11"
                            BorderThickness="0" Padding="14,6" Margin="4,0"
                            Cursor="Hand">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}"
                                        CornerRadius="6" Padding="{TemplateBinding Padding}">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#4A3D2A"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>
    </Border>
</Window>
