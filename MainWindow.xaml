<Window x:Class="DayloaderClock.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:res="clr-namespace:DayloaderClock.Resources"
        Title="Dayloader Clock"
        Icon="app.ico"
        Width="340" Height="160"
        MinWidth="340" MinHeight="160"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        Topmost="True"
        ResizeMode="NoResize"
        ShowInTaskbar="True">

    <Window.TaskbarItemInfo>
        <TaskbarItemInfo/>
    </Window.TaskbarItemInfo>

    <Window.Resources>
        <Style x:Key="ChromeButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#8B7355"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Width" Value="24"/>
            <Setter Property="Height" Value="24"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Opacity" Value="0.6"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="Transparent" CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Opacity" Value="1.0"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Action buttons: slightly larger, subtle style -->
        <Style x:Key="ActionButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#6B5035"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="Width" Value="28"/>
            <Setter Property="Height" Value="24"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Margin" Value="1,0"/>
            <Setter Property="Opacity" Value="0.6"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="bd" Background="Transparent" CornerRadius="5"
                                Padding="3,1">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="bd" Property="Opacity" Value="0.35"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Opacity" Value="1.0"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <!-- Outer frame: dark base -->
    <Border x:Name="outerBorder" CornerRadius="14" Margin="6"
            Background="#2C2419">
        <Border.Effect>
            <DropShadowEffect Color="Black" BlurRadius="16" ShadowDepth="4" Opacity="0.55"/>
        </Border.Effect>

        <!-- Inner panel: warm wood tone -->
        <Border x:Name="innerBorder" CornerRadius="11" Margin="4"
                MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
            <Border.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                    <GradientStop Color="#D4B896" Offset="0.0"/>
                    <GradientStop Color="#C9AA80" Offset="0.3"/>
                    <GradientStop Color="#B8976A" Offset="0.7"/>
                    <GradientStop Color="#A8875A" Offset="1.0"/>
                </LinearGradientBrush>
            </Border.Background>

            <Grid x:Name="mainGrid" Margin="20,10,20,12">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- ═══ TITLE ═══ -->
                <Grid x:Name="rowTitle" Grid.Row="0" Margin="0,0,0,6">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Center">
                        <TextBlock x:Name="txtTitle" Text="THE DAYLOADER CLOCK"
                                   FontSize="14" FontWeight="Bold"
                                   Foreground="#4A3520"
                                   FontFamily="Consolas"
                                   VerticalAlignment="Center"/>
                        <Button Content="&#x1F4C5;" Style="{StaticResource ChromeButton}"
                                Click="History_Click" ToolTip="{x:Static res:Strings.Tooltip_History}" FontSize="13"
                                Margin="6,0,0,0"/>
                        <Button Content="&#x2699;" Style="{StaticResource ChromeButton}"
                                Click="Settings_Click" ToolTip="{x:Static res:Strings.Tooltip_Settings}" FontSize="13"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,-2,-6,0">
                        <Button x:Name="btnMiniMode" Content="&#x274F;" Style="{StaticResource ChromeButton}"
                                Click="MiniMode_Click" ToolTip="{x:Static res:Strings.Tooltip_MiniMode}" FontSize="11"/>
                        <Button Content="&#x2014;" Style="{StaticResource ChromeButton}"
                                Click="MinimizeToTray_Click" ToolTip="{x:Static res:Strings.Tooltip_Minimize}"/>
                        <Button Content="&#x2715;" Style="{StaticResource ChromeButton}"
                                Click="Close_Click" ToolTip="{x:Static res:Strings.Tooltip_Hide}" Foreground="#7A5540"/>
                    </StackPanel>
                </Grid>

                <!-- ═══ INFO ROW ═══ -->
                <Grid x:Name="rowInfo" Grid.Row="1" Margin="0,0,0,5">
                    <TextBlock x:Name="txtStartTime" Text="{x:Static res:Strings.StartTimeDefault}"
                               Foreground="#6B5035" FontSize="10.5" FontFamily="Consolas"/>
                    <TextBlock x:Name="txtElapsed" Text="0h 00m"
                               Foreground="#3A2510" FontSize="10.5" FontWeight="Bold"
                               FontFamily="Consolas" HorizontalAlignment="Center"/>
                    <TextBlock x:Name="txtRemaining" Text="{x:Static res:Strings.RemainingDefault}"
                               Foreground="#6B5035" FontSize="10.5" FontFamily="Consolas"
                               HorizontalAlignment="Right"/>
                </Grid>

                <!-- ═══ PROGRESS BAR ═══ -->
                <Border Grid.Row="2" Background="#3A2E1E" CornerRadius="6"
                        Padding="4" MinHeight="28">
                    <Grid>
                        <Border x:Name="barTrack" CornerRadius="5"
                                Background="#1E1A12" ClipToBounds="True">
                            <Canvas x:Name="barCanvas" ClipToBounds="True"
                                    SizeChanged="BarCanvas_SizeChanged"/>
                        </Border>

                        <!-- Mini mode: percentage overlay -->
                        <TextBlock x:Name="txtMiniPercent" Text=""
                                   Foreground="#FFFFFF" FontSize="10" FontWeight="Bold"
                                   FontFamily="Consolas" Opacity="0.85"
                                   HorizontalAlignment="Center" VerticalAlignment="Center"
                                   Visibility="Collapsed">
                            <TextBlock.Effect>
                                <DropShadowEffect Color="Black" BlurRadius="4" ShadowDepth="1" Opacity="0.8"/>
                            </TextBlock.Effect>
                        </TextBlock>

                        <!-- Lunch overlay -->
                        <TextBlock x:Name="txtLunch" Text="{x:Static res:Strings.LunchPause}"
                                   Foreground="#FFD700" FontSize="11" FontWeight="Bold"
                                   FontFamily="Consolas"
                                   HorizontalAlignment="Center" VerticalAlignment="Center"
                                   Visibility="Collapsed">
                            <TextBlock.Effect>
                                <DropShadowEffect Color="Black" BlurRadius="4" ShadowDepth="1" Opacity="0.8"/>
                            </TextBlock.Effect>
                        </TextBlock>
                    </Grid>
                </Border>

                <!-- ═══ PERCENTAGE MARKERS ═══ -->
                <Grid x:Name="rowMarkers" Grid.Row="3" Margin="6,3,6,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" Text="0%" HorizontalAlignment="Left"
                               Foreground="#6B5035" FontSize="10" FontFamily="Consolas"/>
                    <TextBlock Grid.Column="1" Text="25%" HorizontalAlignment="Left"
                               Foreground="#6B5035" FontSize="10" FontFamily="Consolas"/>
                    <TextBlock Grid.Column="2" Text="50%" HorizontalAlignment="Left"
                               Foreground="#6B5035" FontSize="10" FontFamily="Consolas"/>
                    <TextBlock Grid.Column="3" Text="75%" HorizontalAlignment="Left"
                               Foreground="#6B5035" FontSize="10" FontFamily="Consolas"/>
                    <TextBlock Grid.Column="4" Text="100%"
                               Foreground="#6B5035" FontSize="10" FontFamily="Consolas"/>
                </Grid>

                <!-- ═══ ACTION BUTTONS ═══ -->
                <Grid x:Name="rowActions" Grid.Row="4" Margin="0,5,0,0">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                        <Button x:Name="btnPause" Content="&#x23F8;" Style="{StaticResource ActionButton}"
                                Click="Pause_Click" ToolTip="{x:Static res:Strings.Tooltip_Pause}"/>
                        <Button x:Name="btnStop" Content="&#x23F9;" Style="{StaticResource ActionButton}"
                                Click="Stop_Click" ToolTip="{x:Static res:Strings.Tooltip_EndDay}"/>
                    </StackPanel>
                </Grid>

                <!-- ═══ FOOTER ═══ -->
                <Grid x:Name="rowFooter" Grid.Row="5" Margin="0,3,0,0">

                    <TextBlock x:Name="txtStopIndicator" Text="{x:Static res:Strings.DayCompleted}"
                               Foreground="#CC6633" FontSize="11" FontWeight="Bold"
                               FontFamily="Consolas"
                               HorizontalAlignment="Center" VerticalAlignment="Center"
                               Visibility="Collapsed">
                        <TextBlock.Effect>
                            <DropShadowEffect Color="Black" BlurRadius="4" ShadowDepth="1" Opacity="0.6"/>
                        </TextBlock.Effect>
                    </TextBlock>

                    <TextBlock x:Name="txtPauseIndicator" Text="{x:Static res:Strings.Paused}"
                               Foreground="#FFFFFF" FontSize="12" FontWeight="Bold"
                               FontFamily="Consolas" Opacity="0.55"
                               HorizontalAlignment="Center" VerticalAlignment="Center"
                               Visibility="Collapsed"/>

                    <TextBlock x:Name="txtOvertime" Text=""
                               Foreground="#CC3333" FontSize="11" FontWeight="Bold"
                               FontFamily="Consolas"
                               HorizontalAlignment="Center" VerticalAlignment="Center"
                               Visibility="Collapsed"/>
                </Grid>
            </Grid>
        </Border>
    </Border>
</Window>
