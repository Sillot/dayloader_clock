<Window x:Class="DayloaderClock.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Dayloader Clock"
        Width="560" Height="195"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        Topmost="True"
        ResizeMode="NoResize"
        ShowInTaskbar="True">

    <Window.Resources>
        <Style x:Key="ChromeButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#8B7355"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Width" Value="24"/>
            <Setter Property="Height" Value="24"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#30000000"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <!-- Outer frame: dark base -->
    <Border CornerRadius="14" Margin="6"
            Background="#2C2419">
        <Border.Effect>
            <DropShadowEffect Color="Black" BlurRadius="16" ShadowDepth="4" Opacity="0.55"/>
        </Border.Effect>

        <!-- Inner panel: warm wood tone -->
        <Border CornerRadius="11" Margin="4"
                MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
            <Border.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                    <GradientStop Color="#D4B896" Offset="0.0"/>
                    <GradientStop Color="#C9AA80" Offset="0.3"/>
                    <GradientStop Color="#B8976A" Offset="0.7"/>
                    <GradientStop Color="#A8875A" Offset="1.0"/>
                </LinearGradientBrush>
            </Border.Background>

            <Grid Margin="20,10,20,12">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- ═══ TITLE ═══ -->
                <Grid Grid.Row="0" Margin="0,0,0,6">
                    <TextBlock Text="THE DAYLOADER CLOCK"
                               FontSize="14" FontWeight="Bold"
                               Foreground="#4A3520"
                               FontFamily="Consolas"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"/>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,-2,-6,0">
                        <Button Content="&#x2699;" Style="{StaticResource ChromeButton}"
                                Click="Settings_Click" ToolTip="Paramètres" FontSize="13"/>
                        <Button Content="&#x2014;" Style="{StaticResource ChromeButton}"
                                Click="MinimizeToTray_Click" ToolTip="Réduire"/>
                        <Button Content="&#x2715;" Style="{StaticResource ChromeButton}"
                                Click="Close_Click" ToolTip="Masquer" Foreground="#7A5540"/>
                    </StackPanel>
                </Grid>

                <!-- ═══ INFO ROW ═══ -->
                <Grid Grid.Row="1" Margin="0,0,0,5">
                    <TextBlock x:Name="txtStartTime" Text="Début: --:--"
                               Foreground="#6B5035" FontSize="10.5" FontFamily="Consolas"/>
                    <TextBlock x:Name="txtElapsed" Text="0h 00m"
                               Foreground="#4A3520" FontSize="10.5" FontWeight="SemiBold"
                               FontFamily="Consolas" HorizontalAlignment="Center"/>
                    <TextBlock x:Name="txtRemaining" Text="Reste: 8h 00m"
                               Foreground="#6B5035" FontSize="10.5" FontFamily="Consolas"
                               HorizontalAlignment="Right"/>
                </Grid>

                <!-- ═══ PROGRESS BAR ═══ -->
                <Border Grid.Row="2" Background="#3A2E1E" CornerRadius="8"
                        Padding="4" MinHeight="50">
                    <Grid>
                        <Border x:Name="barTrack" CornerRadius="5"
                                Background="#1E1A12" ClipToBounds="True">
                            <Canvas x:Name="barCanvas" ClipToBounds="True"
                                    SizeChanged="BarCanvas_SizeChanged"/>
                        </Border>

                        <!-- Lunch overlay -->
                        <TextBlock x:Name="txtLunch" Text="&#x1F374; PAUSE"
                                   Foreground="#FFD700" FontSize="11" FontWeight="Bold"
                                   FontFamily="Consolas"
                                   HorizontalAlignment="Center" VerticalAlignment="Center"
                                   Visibility="Collapsed">
                            <TextBlock.Effect>
                                <DropShadowEffect Color="Black" BlurRadius="4" ShadowDepth="1" Opacity="0.8"/>
                            </TextBlock.Effect>
                        </TextBlock>
                    </Grid>
                </Border>

                <!-- ═══ PERCENTAGE MARKERS ═══ -->
                <Grid Grid.Row="3" Margin="6,3,6,0">
                    <TextBlock Text="0%" HorizontalAlignment="Left"
                               Foreground="#6B5035" FontSize="10" FontFamily="Consolas"/>
                    <TextBlock Text="25%" Foreground="#6B5035" FontSize="10"
                               FontFamily="Consolas">
                        <TextBlock.Margin>
                            <Thickness Left="115" Top="0" Right="0" Bottom="0"/>
                        </TextBlock.Margin>
                    </TextBlock>
                    <TextBlock Text="50%" Foreground="#6B5035" FontSize="10"
                               FontFamily="Consolas" HorizontalAlignment="Center"/>
                    <TextBlock Text="75%" Foreground="#6B5035" FontSize="10"
                               FontFamily="Consolas" HorizontalAlignment="Right">
                        <TextBlock.Margin>
                            <Thickness Left="0" Top="0" Right="115" Bottom="0"/>
                        </TextBlock.Margin>
                    </TextBlock>
                    <TextBlock Text="100%" HorizontalAlignment="Right"
                               Foreground="#6B5035" FontSize="10" FontFamily="Consolas"/>
                </Grid>

                <!-- ═══ FOOTER ═══ -->
                <Grid Grid.Row="4" Margin="0,3,0,0">
                    <TextBlock x:Name="txtEndTime" Text="Fin: ~--:--"
                               Foreground="#6B5035" FontSize="10" FontFamily="Consolas"
                               VerticalAlignment="Center"/>

                    <TextBlock x:Name="txtOvertime" Text=""
                               Foreground="#CC3333" FontSize="11" FontWeight="Bold"
                               FontFamily="Consolas"
                               HorizontalAlignment="Center" VerticalAlignment="Center"
                               Visibility="Collapsed"/>

                    <TextBlock x:Name="txtProgress" Text="0% LOADED"
                               Foreground="#4A3520" FontSize="12" FontWeight="Bold"
                               FontFamily="Consolas" HorizontalAlignment="Right"
                               VerticalAlignment="Center"/>
                </Grid>
            </Grid>
        </Border>
    </Border>
</Window>
