<Window x:Class="DayloaderClock.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Dayloader Clock"
        Width="435" Height="160"
        MinWidth="435" MinHeight="160"
        MaxWidth="900" MaxHeight="200"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        Topmost="True"
        ResizeMode="CanResizeWithGrip"
        ShowInTaskbar="True">

    <Window.Resources>
        <Style x:Key="ChromeButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#8B7355"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Width" Value="24"/>
            <Setter Property="Height" Value="24"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#30000000"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <!-- Outer frame: dark base -->
    <Border CornerRadius="14" Margin="6"
            Background="#2C2419">
        <Border.Effect>
            <DropShadowEffect Color="Black" BlurRadius="16" ShadowDepth="4" Opacity="0.55"/>
        </Border.Effect>

        <!-- Inner panel: warm wood tone -->
        <Border CornerRadius="11" Margin="4"
                MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
            <Border.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                    <GradientStop Color="#D4B896" Offset="0.0"/>
                    <GradientStop Color="#C9AA80" Offset="0.3"/>
                    <GradientStop Color="#B8976A" Offset="0.7"/>
                    <GradientStop Color="#A8875A" Offset="1.0"/>
                </LinearGradientBrush>
            </Border.Background>

            <Grid Margin="20,10,20,12">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- â•â•â• TITLE â•â•â• -->
                <Grid Grid.Row="0" Margin="0,0,0,6">
                    <TextBlock x:Name="txtTitle" Text="THE DAYLOADER CLOCK"
                               FontSize="14" FontWeight="Bold"
                               Foreground="#4A3520"
                               FontFamily="Consolas"
                               HorizontalAlignment="Left"
                               VerticalAlignment="Center"/>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,-2,-6,0">
                        <Button x:Name="btnStop" Content="&#x23F9;" Style="{StaticResource ChromeButton}"
                                Click="Stop_Click" ToolTip="Fin de journÃ©e" FontSize="13"/>
                        <Button x:Name="btnPause" Content="&#x23F8;" Style="{StaticResource ChromeButton}"
                                Click="Pause_Click" ToolTip="Pause" FontSize="13"/>
                        <Button Content="&#x1F4C5;" Style="{StaticResource ChromeButton}"
                                Click="History_Click" ToolTip="Historique" FontSize="13"/>
                        <Button Content="&#x2699;" Style="{StaticResource ChromeButton}"
                                Click="Settings_Click" ToolTip="ParamÃ¨tres" FontSize="13"/>
                        <Button Content="&#x2014;" Style="{StaticResource ChromeButton}"
                                Click="MinimizeToTray_Click" ToolTip="RÃ©duire"/>
                        <Button Content="&#x2715;" Style="{StaticResource ChromeButton}"
                                Click="Close_Click" ToolTip="Masquer" Foreground="#7A5540"/>
                    </StackPanel>
                </Grid>

                <!-- â•â•â• INFO ROW â•â•â• -->
                <Grid Grid.Row="1" Margin="0,0,0,5">
                    <TextBlock x:Name="txtStartTime" Text="DÃ©but: --:--"
                               Foreground="#6B5035" FontSize="10.5" FontFamily="Consolas"/>
                    <TextBlock x:Name="txtElapsed" Text="0h 00m"
                               Foreground="#3A2510" FontSize="10.5" FontWeight="Bold"
                               FontFamily="Consolas" HorizontalAlignment="Center"/>
                    <TextBlock x:Name="txtRemaining" Text="Reste: 8h 00m"
                               Foreground="#6B5035" FontSize="10.5" FontFamily="Consolas"
                               HorizontalAlignment="Right"/>
                </Grid>

                <!-- â•â•â• PROGRESS BAR â•â•â• -->
                <Border Grid.Row="2" Background="#3A2E1E" CornerRadius="8"
                        Padding="4" MinHeight="24">
                    <Grid>
                        <Border x:Name="barTrack" CornerRadius="5"
                                Background="#1E1A12" ClipToBounds="True">
                            <Canvas x:Name="barCanvas" ClipToBounds="True"
                                    SizeChanged="BarCanvas_SizeChanged"/>
                        </Border>

                        <!-- Lunch overlay -->
                        <TextBlock x:Name="txtLunch" Text="&#x1F374; PAUSE"
                                   Foreground="#FFD700" FontSize="11" FontWeight="Bold"
                                   FontFamily="Consolas"
                                   HorizontalAlignment="Center" VerticalAlignment="Center"
                                   Visibility="Collapsed">
                            <TextBlock.Effect>
                                <DropShadowEffect Color="Black" BlurRadius="4" ShadowDepth="1" Opacity="0.8"/>
                            </TextBlock.Effect>
                        </TextBlock>
                    </Grid>
                </Border>

                <!-- â•â•â• PERCENTAGE MARKERS â•â•â• -->
                <Grid Grid.Row="3" Margin="6,3,6,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" Text="0%" HorizontalAlignment="Left"
                               Foreground="#6B5035" FontSize="10" FontFamily="Consolas"/>
                    <TextBlock Grid.Column="1" Text="25%" HorizontalAlignment="Left"
                               Foreground="#6B5035" FontSize="10" FontFamily="Consolas"/>
                    <TextBlock Grid.Column="2" Text="50%" HorizontalAlignment="Left"
                               Foreground="#6B5035" FontSize="10" FontFamily="Consolas"/>
                    <TextBlock Grid.Column="3" Text="75%" HorizontalAlignment="Left"
                               Foreground="#6B5035" FontSize="10" FontFamily="Consolas"/>
                    <TextBlock Grid.Column="4" Text="100%"
                               Foreground="#6B5035" FontSize="10" FontFamily="Consolas"/>
                </Grid>

                <!-- â•â•â• FOOTER â•â•â• -->
                <Grid Grid.Row="4" Margin="0,3,0,0">

                    <!-- Pomodoro button -->
                    <Button x:Name="btnPomodoro" Content="ðŸ…" Style="{StaticResource ChromeButton}"
                            Click="Pomodoro_Click" ToolTip="Pomodoro (25 min)" FontSize="16"
                            HorizontalAlignment="Left" VerticalAlignment="Center"
                            Margin="-4,0,0,0" Padding="2,0"/>

                    <TextBlock x:Name="txtStopIndicator" Text="&#x23F9; JOURNÃ‰E TERMINÃ‰E"
                               Foreground="#CC6633" FontSize="11" FontWeight="Bold"
                               FontFamily="Consolas"
                               HorizontalAlignment="Center" VerticalAlignment="Center"
                               Visibility="Collapsed">
                        <TextBlock.Effect>
                            <DropShadowEffect Color="Black" BlurRadius="4" ShadowDepth="1" Opacity="0.6"/>
                        </TextBlock.Effect>
                    </TextBlock>

                    <TextBlock x:Name="txtPauseIndicator" Text="&#x23F8; EN PAUSE"
                               Foreground="#E8A030" FontSize="11" FontWeight="Bold"
                               FontFamily="Consolas"
                               HorizontalAlignment="Center" VerticalAlignment="Center"
                               Visibility="Collapsed">
                        <TextBlock.Effect>
                            <DropShadowEffect Color="Black" BlurRadius="4" ShadowDepth="1" Opacity="0.6"/>
                        </TextBlock.Effect>
                    </TextBlock>

                    <!-- Pomodoro progress bar -->
                    <Grid x:Name="pomodoroBar" HorizontalAlignment="Center" VerticalAlignment="Center"
                          Visibility="Collapsed" Width="160" Height="14">
                        <Border Background="#1E1A12" CornerRadius="3" BorderBrush="#5A4830" BorderThickness="1"/>
                        <Border x:Name="pomodoroFill" Background="#E84030" CornerRadius="3"
                                HorizontalAlignment="Left" Width="0" Opacity="0.9"/>
                        <TextBlock x:Name="txtPomodoro" Text="" Foreground="#FFFFFF" FontSize="9"
                                   FontWeight="Bold" FontFamily="Consolas"
                                   HorizontalAlignment="Center" VerticalAlignment="Center">
                            <TextBlock.Effect>
                                <DropShadowEffect Color="Black" BlurRadius="3" ShadowDepth="1" Opacity="0.7"/>
                            </TextBlock.Effect>
                        </TextBlock>
                    </Grid>

                    <TextBlock x:Name="txtOvertime" Text=""
                               Foreground="#CC3333" FontSize="11" FontWeight="Bold"
                               FontFamily="Consolas"
                               HorizontalAlignment="Center" VerticalAlignment="Center"
                               Visibility="Collapsed"/>

                    <TextBlock x:Name="txtVersion" Text="v1.0.0"
                               Foreground="#8A7560" FontSize="9"
                               FontFamily="Consolas" HorizontalAlignment="Right"
                               VerticalAlignment="Bottom" Margin="0,0,0,-2" Opacity="0.6"/>
                </Grid>
            </Grid>
        </Border>
    </Border>
</Window>
